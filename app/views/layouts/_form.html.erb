 <%= form_with model: book, local: true do |f| %>
    <div class="field row">
      <%= f.label :Title %><br/>
      <%= f.text_field :title, :class => "col-xs-12" %>
    </div>  
    <div class="field row">
      <%= f.label :Opinion %><br />
      <%= f.text_area :body, :class => "col-xs-12" %>
    </div>  
    <div class="actions row"><br />
      <%= f.submit "Create Book", class: "btn btn-primary col-xs-12" %>
    </div>
  <% end %>