<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
        <p>イメージ画像</p>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <!--ここにリンクタグ-->
      </div>
      <h2>New book</h2>
      <%= form_with model: @book, local: true do |f| %>

        <div class="field">
          <%= f.label :Title %><br />
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :Opinion %><br />
          <%= f.text_area :body %>
        </div>
        <div class="actions"><br />
          <%= f.submit "Create Book" %>
        </div>
      <% end %>
    </div>
    <div class="col-lg-9">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th>イメージ画像</th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>イメージ画像</td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>