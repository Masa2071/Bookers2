<div class="container">
  
<% if @book.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-xs-3">
    <h2>User info</h2>
      <p><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></p>

    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <% if @user.id ==  current_user.id %>
        <%= link_to "編集", edit_user_path(@user) %>
      <% else %>
      <!--ログインしたユーザの詳細に戻る-->
        <%= link_to "戻る", user_path(current_user) %>
      <% end %>
    </div>
    <h2>New book</h2>
      <%= form_with model: @book, local: true do |f| %>
        <div class="field">
          <%= f.label :Title %><br />
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :Opinion %><br />
          <%= f.text_area :body %>
        </div>
        <div class="actions"><br />
          <%= f.submit "Create Book" %>
        </div>
      <% end %>
  </div>
  <div class="col-xs-9">
    <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th>Titie</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"%></td>
          <!--画像を保持しているのはbookモデルに紐付けられたuserモデル-->
          <td><%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
  </div>
</div>
</div>