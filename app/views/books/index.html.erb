<h2>Books</h2>
 <table>
  <tbody>
    <thead>
      <tr>
        <th>Titie</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"%></td>
        <!--画像を保持しているのはbookモデルに紐付けられたuserモデル-->
        <td><%= link_to book_path(book) do %>
              <%= book.title %>
            <% end %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>