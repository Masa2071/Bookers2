<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Editing Book</h1>
      <%= form_with model: @book, local: true do |f| %>

      <div class="field">
        <%= f.label :Title %><br />
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :Opinion %><br />
        <%= f.text_area :body %>
      </div>

      <div class="actions">
        <%= f.submit "Update Book" %>
      </div>
      <% end %>
    </div>
  </div>
</div>