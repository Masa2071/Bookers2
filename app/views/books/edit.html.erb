<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>Editing Book</h1>

        <%= form_with model: @book, local: true do |f| %>

        <% if @book.errors.any? %>
          <div id="error_explanation">
            <h3><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
            <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="field row">
          <%= f.label :Title %><br />
          <%= f.text_field :title, :class => "col-xs-12" %>
        </div>
        <div class="field row">
          <%= f.label :Opinion %><br />
          <%= f.text_area :body, :class => "col-xs-12" %>
        </div>

        <div class="actions row">
          <%= f.submit "Update Book", :class => "btn btn-primary col-xs-12" %>
        </div>
        <% end %>
       <p><%= link_to 'Show', book_path(@book) %> |  <%= link_to 'Back', books_path %></p>
      </div>
    </div>
  </div>
</div>