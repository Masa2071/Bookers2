<div class="container">
<div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
        <p><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></p>
        <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <% if @user.id ==  current_user.id %>
          <%= link_to "編集", edit_user_path(@user) %>
        <% else %>
        <!--ログインしたユーザの詳細に戻る-->
          <%= link_to "戻る", user_path(current_user) %>
        <% end %>
      </div>
      <h2>New book</h2>
      <%= form_with model: @books, local: true do |f| %>

        <div class="field">
          <%= f.label :Title %><br />
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :Opinion %><br />
          <%= f.text_area :body %>
        </div>
        <div class="actions"><br />
          <%= f.submit "Create Book" %>
        </div>
      <% end %>
    </div>
    <div class="col-lg-9">
      <h2>Book detail</h2>
       <table>
        <tbody>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></br>
                <%= link_to user_path(@user) do %>
                <%= @user.name %>
                <% end %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if user_signed_in? && @user.id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
            <td><%= link_to "削除", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>