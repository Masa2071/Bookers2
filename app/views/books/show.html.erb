<h2>Book detail</h2>
 <table>
  <tbody>
    <tr>
      <td><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
      <td><%= link_to "削除", book_path(@book.id), method: :delete %></td>
    </tr>
  </tbody>
</table>