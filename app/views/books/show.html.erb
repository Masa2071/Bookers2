<div class="body">
  <div class="container">
  <%= flash[:notice] %>
    <div class="row">
      <%= render 'layouts/profile', user: @user %>
      <div class="col-lg-9">
        <h2>Book detail</h2>
       <table class="table">
          <tbody>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></br>
                  <%= link_to user_path(@user) do %>
                  <%= @user.name %>
                  <% end %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <% if user_signed_in? && @user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@current_user_book.id) %></td>
              <td><%= link_to "削除", book_path(@current_user_book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
  </div>
</div>
</div>